<Window x:Class="PersonalLibrary.UI.Views.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalLibrary.UI.Views"
        mc:Ignorable="d"
        Title="Edit Book" Height="500" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Title" Grid.Row="0" FontWeight="SemiBold"/>
        <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="0,4,0,8"/>


        <!-- Author -->
        <TextBlock Text="Author" Grid.Row="2" FontWeight="SemiBold"/>
        <TextBox x:Name="AuthorTextBox" Grid.Row="3" Margin="0,4,0,8"/>

        <!-- ISBN and Year -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel Width="180">
                <TextBlock Text="ISBN" FontWeight="SemiBold"/>
                <TextBox x:Name="ISBNTextBox" Margin="0,4,8,0"/>
            </StackPanel>
            <StackPanel Width="120">
                <TextBlock Text="Publication Year" FontWeight="SemiBold"/>
                <TextBox x:Name="PublicationYearTextBox" Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Reading Status -->
        <TextBlock Text="Reading Status" Grid.Row="5" FontWeight="SemiBold"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="6" Margin="0,4,0,8" DisplayMemberPath="Name" SelectedValuePath="ReadingStatusId"/>

        <!-- Dates -->

        <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel Width="160">
                <TextBlock Text="Date Started" FontWeight="SemiBold"/>
                <DatePicker x:Name="DateStartedPicker"/>
                <TextBlock Text="Date Finished" FontWeight="SemiBold"/>
                <DatePicker x:Name="DateFinishedPicker"/>
            </StackPanel>
        </StackPanel>

        <!-- Rating -->
        <TextBlock Text="Rating" Grid.Row="8" FontWeight="SemiBold"/> 
        <StackPanel Orientation="Horizontal" Grid.Row="9" HorizontalAlignment="Left" Margin="0,4,0,8">
            <Button x:Name="Star1" Content="☆" Tag="1" FontSize="16" Click="Star_Click"/>
            <Button x:Name="Star2" Content="☆" Tag="2" FontSize="16" Click="Star_Click"/>
            <Button x:Name="Star3" Content="☆" Tag="3" FontSize="16" Click="Star_Click"/>
            <Button x:Name="Star4" Content="☆" Tag="4" FontSize="16" Click="Star_Click"/>
            <Button x:Name="Star5" Content="☆" Tag="5" FontSize="16" Click="Star_Click"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,8,0" Click="CancelButton_Click"/>
            <Button Content="Save" Width="80" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
